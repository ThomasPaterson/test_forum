<% title "Topics" %>

<table>
  <tr>
    <th>Name</th>
    <th>Last Poster</th>
    <th>Last Post At</th>
  </tr>
  <% for topic in @topics %>
    <tr>
      <td><%= topic.name %></td>
      <td><%= topic.user.username %></td>
      <td><%= topic.last_post_at %></td>
      <td><%= link_to "Show", topic %></td>
      <td><%= link_to "Edit", edit_topic_path(topic) %></td>
      <td><%= button_to "delete", topic, :method=>:delete, :class=>:destroy %></td>
    </tr>
  <% end %>
</table>

<p><%= link_to "New Topic", new_topic_path %></p>
